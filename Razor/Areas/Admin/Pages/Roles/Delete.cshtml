@page "/Admin/Roles/Delete/{id}"
@model Razor.Pages.Roles.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Roles</h4>
    <partial name="_StatusMessage" model="Model.StatusMessage"/>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role.Name) : 
        </dt>
        <dt class="col-sm-4">
            @Model.Role.Name
        </dt>
        
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="@Model.Role.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
</div>

<div>
    <a class="btn btn-primary mt-2 mb-2" asp-page="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
